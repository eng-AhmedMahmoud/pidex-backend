{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders with status tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerNameAr": {
      "type": "string"
    },
    "customerPhone": {
      "type": "string",
      "required": true
    },
    "customerWhatsapp": {
      "type": "string"
    },
    "customerState": {
      "type": "string"
    },
    "customerArea": {
      "type": "string"
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "order.order-item"
    },
    "subtotal": {
      "type": "decimal",
      "min": 0
    },
    "shippingCost": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "tax": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "processing", "shipped", "delivered", "cancelled"],
      "default": "pending",
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "paid", "failed", "refunded"],
      "default": "pending"
    },
    "paymentMethod": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "shippingAddress": {
      "type": "json"
    },
    "billingAddress": {
      "type": "json"
    }
  }
}
